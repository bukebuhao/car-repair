<tagLib name="html,cx" />
<include file="Public:header" />
<div class="mainarea">
<div class="maininner">
<form method="post" action="{:U("Ad/doModify")}" enctype="multipart/form-data">
    
	<div class="body_content">
		<div class="top_action"><a href="__URL__">返回列表</a> | <a href="{:U("Link/insert")}">录入链接</a></div>
		<table cellspacing="0" cellpadding="0" id="maintable" class="formtable">
		<tr>
		  <th style="width:8em;">广告类型</th>
		  <td><select name="category_id" id="category_id">
		    <option value="1" {$vo.category_id|selected=1}>图片</option>
		    <option value="2" {$vo.category_id|selected=2}>文本</option>
		    <option value="3" {$vo.category_id|selected=3}>FLASH</option>
		    <option value="4" {$vo.category_id|selected=4}>JS</option>
          </select></td>
		  </tr>
		<tr>
		  <th style="width:8em;">标　　题</th>
		<td><input name="title" id="title" value="{$vo.title}" size="60"></td></tr>
		
        <tr>
          <th style="width:8em;">链　　接 </th>
          <td><input name="link_url" type="text"   id="link_url" value="{$vo.link_url}" size="60"/></td></tr>
        
        <tr>
          <th colspan="2" style="width:8em;">以下为选填内容</th>
        </tr>
        <tr>
          <th style="width:8em;">文件/图片</th>
          <td> <input name="attach_image" type="file" id="attach_image" /></td></tr>
          
         <tr>
           <th style="width:8em;">状　　态 </th>
           <td><select name="status" id="status">
             <option value="1" {$vo.status|selected=1}>显示</option>
             <option value="0" {$vo.status|selected=0}>隐藏</option>
           </select></td></tr>
        
         <tr>
           <th style="width:8em;">排　　序</th>
           <td><input name="display_order" id="display_order" value="{$vo.display_order}" size="10" /></td>
         </tr>
         <tr>
		  <th style="width:8em;">描　　述</th>
		<td><textarea name="description" cols="60" rows="5"  id="description">{$vo.description}</textarea></td></tr>
        
		<td></td>
		  </tr>
		
		</tbody>
		
		</table>
	</div>
	<div class="foot_action">
	<input type="submit" name="submit" value="提交更新" class="submit">
     <input type="reset" name="button" id="button" value="还原重填" class="submit"/>
	<input name="id" type="hidden" id="id" value="{$vo.id}" />
	</div>
	</form>
</div>
</div>

<div class="side">
<include file="Public:sider" />
</div>
<include file="Public:footer" />